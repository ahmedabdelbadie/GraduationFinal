<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aboabdel_badie.graduationfinal.Start.Masterp.Health">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnr_tem"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Tempreature :-"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tempreature"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnr_pres"
        android:layout_below="@+id/lnr_tem"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Pressure :-"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pressure"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnr_suger"
        android:layout_below="@+id/lnr_pres"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Suger :-"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_suger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Suger"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_suger"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="Report"/>

    <EditText

        android:id="@+id/et_report"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_report"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_report"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:onClick="sendreport"/>


</RelativeLayout>
